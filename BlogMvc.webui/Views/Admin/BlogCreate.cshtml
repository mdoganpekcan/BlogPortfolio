@model BlogModel

<h3 class="mt-4 mb-4">Blog Create</h3>
<hr>
   
        <div class="row m-0">
            <div class="col-md-12">
                 <form asp-controller="Admin" asp-action="BlogCreate" method="POST" enctype="multipart/form-data">
                    <div class="row m-0">
                        <div class="col-md-8">
                            <div class="form-group row m-2">
                                <label asp-for="BlogHeader" class="col-sm-2 col-form-label">Başlık</label>
                                <div class="col-sm-10">
                                    <input  class="form-control" asp-for="BlogHeader">
                                </div>
                            </div>
                            <div class="form-group row m-2">
                                <label asp-for="BlogUrl" class="col-sm-2 col-form-label">Blog Url</label>
                                <div class="col-sm-10">
                                    <input class="form-control" asp-for="BlogUrl">
                                </div>
                            </div>
                            <div class="form-group row m-2">
                                <label asp-for="BlogText" class="col-sm-2 col-form-label">Text</label>
                                <div class="col-sm-10">
                                    <textarea id="editor" class="form-control" asp-for="BlogText"></textarea>
                                </div>
                            </div>
                            <div class="form-group row m-2">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Add Product</button>
                                </div>
                            </div>
                        </div> 
                        <div class="col-md-4">
                            @foreach (var item in (List<Category>)ViewBag.Categories)
                            {
                            <div class="custom-control custom-checkbox">
                                @* Any metodu bool (true-false) değer döndürür , eğer datadan gelen ile eşleşiyorsa
                                    checked metodu ile checkboxlar işaretlenir. *@
                                <input type="checkbox" class="custom-control-input"
                                    id="category_@(item.CategoryId)"
                                    name="categoryIds"
                                    value="@item.CategoryId">
                                <label class="custom-control-label" for="category_@(item.CategoryId)">@item.Name</label>
                            </div>
                            }
                            <div class="custom-control custom-checkbox mt-3">
                                <input asp-for="IsHome" type="checkbox" class="custom-control-input">
                                <label asp-for="IsHome" class="custom-control-label">Home</label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
                                <label asp-for="IsApproved" class="custom-control-label">To Approve</label>
                            </div>
                        </div>  
                    </div>
                </form>
            </div>
    

 @section Scripts
 {
     <script src="/modules/ckeditor/ckeditor.js"></script>
     <script>
         CKEDITOR.replace('editor');
     </script>
 }