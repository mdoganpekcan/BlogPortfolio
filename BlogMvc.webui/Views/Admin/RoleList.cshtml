@model IEnumerable<IdentityRole>
<div class="row m-0">
    <div class="col-md-12 mt-4 mb-4">
        <h3 class="mt-4 mb-4">Roles List</h3>
        <hr>
        
        <table class="table text-white table-bordered mt-3 text-white">
            <thead>
                <tr>
                    <td style="width: 250px;">Id</td>
                    <td>Role Name</td>
                    <td>
                        <a class="btn btn-success btn-sm" href="/admin/role/create">
                            Create Role
                        </a>
                    </td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count()>0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td style="width: 200px;">
                                <a href="/admin/role/@item.Id" class="btn btn-warning btn-sm mr-2">Edit</a>
                                <form action="/admin/role/delete" method="POST" style="display: inline;">
                                    <input type="hidden" name="RoleId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                            
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>
                            No Roles
                        </h3>
                    </div>
                }

            </tbody>

        </table>

    </div>

</div>