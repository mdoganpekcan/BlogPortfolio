@model CategoryProjectModel

<form asp-controller="Admin" asp-action="ProjectCategoryEdit" method="POST">

    <div class="row m-0">
        <div class="col-md-12">
            <h3 class="mt-4 mb-4">Project Category Edit</h3>
            <hr>

            <div class="row m-0">
                <div class="col-md-8 p-0">
                    <input type="hidden" name="CategoryProjectId" value="@Model.CategoryProjectId">
                    <div class="form-group row m-2">
                        <label asp-for="Name" class="col-sm-2 col-form-label">CATEGORY NAME</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Name">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label asp-for="Url" class="col-sm-2 col-form-label">CATEGORY URL</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Url">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">

                </div>

            </div>
        </div>
    </div>
</form>