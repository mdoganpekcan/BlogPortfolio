@model SkillModel


<form asp-controller="Admin" asp-action="SkillEdit" method="POST" enctype="multipart/form-data">
    @* verileri server'a dosya olarak taşıyan framework 'enctype'  *@
    <div class="row m-0">
        <div class="col-md-12">
        <h3 class="mt-4 mb-4">Skill Edit</h3>
        <hr>
        <div class="row m-0">
            <div class="col-md-8 p-0">
                <input type="hidden" name="SkillId" value="@Model.SkillId">
                <div class="form-group row m-2">
                    <label asp-for="SkillText" class="col-sm-2 col-form-label">SKILL TEXT</label>
                    <div class="col-sm-10">
                        <input  class="form-control" asp-for="SkillText">
                    </div>
                </div>
                <div class="form-group row m-2">
                        <label asp-for="Url" class="col-sm-2 col-form-label">Url</label>
                        <div class="col-sm-10">
                            <input  class="form-control" asp-for="Url">
                        </div>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="SkillPoint" class="col-sm-2 col-form-label">SKILL POINT (%)</label>
                    <div class="col-sm-10">
                        <input  class="form-control" asp-for="SkillPoint">
                    </div>
                </div>
                <div class="form-group row m-2">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                 @foreach (var item in (List<CategorySkill>)ViewBag.CategorySkills)
                {
                <div class="custom-control custom-checkbox mt-2">
                    @* Any metodu bool (true-false) değer döndürür , eğer datadan gelen ile eşleşiyorsa
                        checked metodu ile checkboxlar işaretlenir. *@
                    <input type="checkbox" class="custom-control-input"
                        id="categoryskill_@(item.CategorySkillId)"
                        name="categoryIds"
                        value="@item.CategorySkillId"
                        @(Model.SelectedSkillCategories.Any(i=>i.CategorySkillId==item.CategorySkillId)?"checked":"")>
                    <label class="custom-control-label" for="categoryskill_@(item.CategorySkillId)">@item.SkillArea</label>
                </div>
                }
                <hr>
                <div class="custom-control custom-checkbox">
                    <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
                    <label asp-for="IsApproved" class="custom-control-label">To Approve</label>
                </div>
            </div>
        </div>
                
        </div>
    </div>
 </form>
