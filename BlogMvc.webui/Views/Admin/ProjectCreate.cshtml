@model ProjectModel

    <form asp-controller="Admin" asp-action="ProjectCreate" method="POST" enctype="multipart/form-data">
        <div class="row m-0">
            
            <div class="col-md-12">
                <h3 class="mt-4 mb-4">Project Create</h3>
                <hr>
                <div class="row m-0">
                    <div class="col-md-8">
                        <div class="form-group row m-2">
                            <label asp-for="ProjectHeader" class="col-sm-2 col-form-label">Header</label>
                            <div class="col-sm-10">
                                <input  class="form-control" asp-for="ProjectHeader">
                            </div>
                        </div>

                        <div class="form-group row m-2">
                            <label asp-for="ProjectUrl" class="col-sm-2 col-form-label">Url</label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="ProjectUrl">
                            </div>
                        </div>
                        
                        <div class="form-group row m-2">
                            <label asp-for="ProjectText" class="col-sm-2 col-form-label">Text</label>
                            <div class="col-sm-10">
                                <textarea id="editor" class="form-control" asp-for="ProjectText"></textarea>
                            </div>
                        </div>
                        
                        <div class="form-group row m-2">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </div>
                    </div>   
                    <div class="col-md-4">
                        @foreach (var item in (List<CategoryPj>)ViewBag.CategoryProjects)
                        {
                        <div class="custom-control custom-checkbox">
                            @* Any metodu bool (true-false) değer döndürür , eğer datadan gelen ile eşleşiyorsa
                                checked metodu ile checkboxlar işaretlenir. *@
                            <input type="checkbox" class="custom-control-input"
                                id="category_@(item.CategoryProjectId)"
                                name="categoryIds"
                                value="@item.CategoryProjectId">
                            <label class="custom-control-label" for="category_@(item.CategoryProjectId)">@item.Name</label>
                        </div>
                        }
                        <div class="custom-control custom-checkbox mt-3">
                            <input asp-for="IsHome" type="checkbox" class="custom-control-input">
                            <label asp-for="IsHome" class="custom-control-label">Home</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
                            <label asp-for="IsApproved" class="custom-control-label">To Approve</label>
                        </div>
                    </div>  
                </div>
            </div>
        </div>
    </form>
    
 @section Scripts
 {
     <script src="/modules/ckeditor/ckeditor.js"></script>
     <script>
         CKEDITOR.replace('editor');
     </script>
 }