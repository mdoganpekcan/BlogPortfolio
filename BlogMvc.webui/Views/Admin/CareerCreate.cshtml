@model CareerModel

<form asp-controller="Admin" asp-action="CareerCreate" method="POST">
    <div class="row m-0">

        <div class="col-md-12">
            <h3 class="mt-4 mb-4">Career Create</h3>
            <hr>
            <div class="row m-0">
                <div class="col-md-8 p-0">
                    <div class="form-group row m-2">
                        <label asp-for="BusinessTime" class="col-sm-2 col-form-label">Time</label>
                        <div class="col-sm-10">
                            <input  class="form-control" asp-for="BusinessTime">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label asp-for="BusinessCompany" class="col-sm-2 col-form-label">Business Company</label>
                        <div class="col-sm-10">
                            <input  class="form-control" asp-for="BusinessCompany">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label asp-for="BusinessName" class="col-sm-2 col-form-label">Business Name</label>
                        <div class="col-sm-10">
                            <input  class="form-control" asp-for="BusinessName">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-success">Add </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
                        <label asp-for="IsApproved" class="custom-control-label">To Approve</label>
                    </div>
                </div>  
            </div>
        </div>
        
    </div>
</form>