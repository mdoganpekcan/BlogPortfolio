@model AboutModel

<form asp-controller="Admin" asp-action="AboutCreate" method="POST">
    <div class="row m-0">
        
        <div class="col-md-12">
            <h3 class="mt-4 mb-4">About Create</h3>
            <hr>
            <div class="row m-0">
                <div class="col-md-9 p-0">
                    <div class="form-group row m-2">
                        <label asp-for="AboutBaslik" class="col-sm-2 col-form-label">HEADER CREATE</label>
                        <div class="col-sm-10">
                            <input  class="form-control" asp-for="AboutBaslik">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label asp-for="AboutText" class="col-sm-2 col-form-label">TEXT CREATE</label>
                        <div class="col-sm-10">
                            <textarea cols="50" rows="4" id="editor" class="form-control" asp-for="AboutText"></textarea>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-success">Add</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
                        <label asp-for="IsApproved" class="custom-control-label">Yayınlama Onayı</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

 @section Scripts
 {
     <script src="/modules/ckeditor/ckeditor.js"></script>
     <script>
         CKEDITOR.replace('editor');
     </script>
 }