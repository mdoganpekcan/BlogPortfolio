@model RoleModel
    <h3 class="mt-4 mb-4">Create Role</h3>
    <hr>
    <div class="row m-0">
        <div class="col-md-6">
            <form asp-controller="Admin" asp-action="RoleCreate" method="POST">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row m-2">
                        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input  class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-info">Save Role</button>
                        </div>
                    </div>
            </form>
        </div>
        <div class="col-md-6">

        </div>
    </div>
       
