@model RegisterModel

<form asp-controller="Account" asp-action="Register" method="POST">
    <div class="row m-0">
        
        <div class="col-md-12">
            <h3 class="mt-4">Register Create</h3>
            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row m-0">
                <div class="col-md-4 p-0">
                    <div class="form-group row m-2">
                        <label asp-for="FirstName" class="col-sm-3 col-form-label">First Name</label>
                        <div class="col-sm-10">
                            <input  class="form-control" asp-for="FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label asp-for="LastName" class="col-sm-3 col-form-label">Last Name</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="LastName"></input>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label asp-for="UserName" class="col-sm-3 col-form-label">UserName</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="UserName"></input>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label asp-for="Password" class="col-sm-3 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Password"></input>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label asp-for="RePassword" class="col-sm-3 col-form-label">RePassword</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="RePassword"></input>
                            <span asp-validation-for="RePassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label asp-for="Email" class="col-sm-3 col-form-label">E-mail</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Email"></input>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <div class="col-sm-10 offset-sm-4">
                            <button type="submit" class="btn btn-success">Add</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

 @section Scripts
 {
     
 }