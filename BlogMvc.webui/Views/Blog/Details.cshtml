 @model BlogDetailModel

    <div class="row m-0 p-0">
        <div class="col-md-12 mt-0 bg-light">
            
            <div style="height:auto;" class="container-fluit mt-3 text-dark bg-light d-block">

                <div class="blogheader text-center">
                    <h3 class="mb-3 text-dark">@Model.Blogs.BlogHeader</h3>
                </div>

                <div class="blogdetails d-flex">
                    <div class="blogurl ml-3">
                        
                        @foreach (var item in Model.Categories)
                        {
                            <a asp-controller="blog" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">Category : @item.Name</a>
                        }
                    </div>
                    <div class="blogdate font-weight-light mr-3">
                        Date : @Model.Blogs.BlogDate
                    </div>
                </div>
                <hr>
                <div class="figureimg text-center">
                <img style="width: 65%;height:100%;" src="~/images/web_bg.jpg" alt="">
                @* @Model.Blogs.BlogImageUrl *@
                </div>
                <div class="blogtext">
                    <p class="p-3">@Html.Raw(Model.Blogs.BlogText)</p>
                </div>

            </div>
        
        </div>
    </div>
    